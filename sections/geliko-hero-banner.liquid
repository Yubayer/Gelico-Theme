          "info": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_tab",
          "label": "Select Image for Tablet",
          "info": "Table Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Select Image for Mobile",
          "info": "Mobile Image"
        },
        {
          "type": "text",
          "id": "tag",
          "label": "Tag",
          "default": "New Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Invites customers to explore your unique style offerings"
        },
        {
          "type": "text",
          "id": "subtitle",
